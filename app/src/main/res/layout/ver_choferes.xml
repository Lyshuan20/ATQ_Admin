<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AgregarChoferes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_corner_16_top_left"
            android:gravity="center"
            android:padding="12dp"
            android:text="Datos del chofer"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CAMPOS DDE TEXTO -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre(s)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerNombreChofer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Apellidos">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerApellidosChofer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="CURP">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerCURP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Domicilio">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerDomicilioChofer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Tipo de sangre">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerTipoSangreChofer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Telefono">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerTelefonoChofer"
                    android:layout_width="match_parent"
                    android:maxLength="10"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- STRING FECHAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:hint="Fecha nacimiento">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/VerFechaNac"
                        android:layout_width="match_parent"
                        android:maxLength="10"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:inputType="none"
                        android:focusable="false"
                        android:textIsSelectable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Fecha ingreso">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/VerFechaIng"
                        android:layout_width="match_parent"
                        android:maxLength="10"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:inputType="none"
                        android:focusable="false"
                        android:textIsSelectable="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Vencimiento de licencia">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/VerFechaLic"
                    android:layout_width="match_parent"
                    android:maxLength="10"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:textIsSelectable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- BOTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarChofer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"

                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:text="Cerrar"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>