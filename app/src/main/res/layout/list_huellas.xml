<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemHuellas"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMostrarNomHuella"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Chofer 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_huella"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/txtMostrarNomHuella"/>
        <TextView
            android:id="@+id/txtMostarIdHuella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="1dp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/txtID"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/txtMostrarNomHuella">

            <Button
                android:id="@+id/btnMostrarHuella"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:text="Mostrar"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/button_border"/>
            <Button
                android:id="@+id/btnEliminarHuella"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Eliminar"
                android:background="@drawable/bg_black_corner_10"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>